<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.AddImageProfile"
    android:orientation="vertical"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            app:icon="@drawable/ic_baseline_cloud_upload_24"
            android:id="@+id/btnAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="50dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/gray"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/place_holder_food"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/view_shopname_profile"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Title"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/keepcalm"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:id="@+id/view_shopdesc_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/keepcalm"
                    android:text="Descrioption"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_shopPrice_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/keepcalm"
                        android:text="200 / Month"
                        android:textSize="10dp"
                        android:textStyle="normal"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time : 40 min"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/keepcalm"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="This Is how Your Profile will look like"
            android:textStyle="bold"
            android:fontFamily="@font/keepcalm"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
</LinearLayout>