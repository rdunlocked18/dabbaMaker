<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:background="@drawable/rounded_dialog"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    android:elevation="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pull_up"
            android:layout_gravity="center_horizontal"
            android:tint="@color/colorAccent"/>

        <TextView
            android:id="@+id/pullUpTvShow"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull Up To View Today's Menu"
            android:fontFamily="@font/keepcalm"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_food1"
            android:tint="@color/colorAccent"/>

        <TextView
            android:textColor="#fff"
            android:id="@+id/foodSheetGet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salads"
            android:fontFamily="@font/keepcalm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_food1"
            android:tint="@color/colorAccent"/>

        <TextView
            android:textColor="#fff"
            android:id="@+id/foodSheetGet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Course"
            android:fontFamily="@font/keepcalm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_food1"
            android:tint="@color/colorAccent"/>

        <TextView
            android:textColor="#fff"
            android:id="@+id/foodSheetGet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Food"
            android:fontFamily="@font/keepcalm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_food1"
            android:tint="@color/colorAccent"/>

        <TextView
            android:textColor="#fff"
            android:id="@+id/foodSheetGet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:fontFamily="@font/keepcalm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_food1"
            android:tint="@color/colorAccent"/>

        <TextView

            android:textColor="#fff"
            android:id="@+id/foodSheetGet5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="@font/keepcalm"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>


</LinearLayout>